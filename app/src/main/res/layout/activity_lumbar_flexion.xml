<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LumbarFlexionActivity">

    <Button
        android:id="@+id/btnFlexionRightNeutralUpload"
        android:layout_width="116dp"
        android:layout_height="71dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="124dp"
        android:onClick="onBtnUploadClick"
        android:text="Right Neutral Position"
        app:backgroundTint="#100F0F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFlexionRightUpload"
        android:layout_width="116dp"
        android:layout_height="71dp"
        android:layout_marginStart="12dp"
        android:onClick="onBtnUploadClick"
        android:text="Right Position"
        app:backgroundTint="#0E0E0E"
        app:layout_constraintBottom_toBottomOf="@+id/btnFlexionRightNeutralUpload"
        app:layout_constraintStart_toEndOf="@+id/btnFlexionRightNeutralUpload"
        app:layout_constraintTop_toTopOf="@+id/btnFlexionRightNeutralUpload"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnFlexionLeftUpload"
        android:layout_width="116dp"
        android:layout_height="71dp"
        android:layout_marginStart="12dp"
        android:onClick="onBtnUploadClick"
        android:text="Left Position"
        app:backgroundTint="#0E0E0E"
        app:layout_constraintBottom_toBottomOf="@+id/btnFlexionLeftNeutralUpload"
        app:layout_constraintStart_toEndOf="@+id/btnFlexionLeftNeutralUpload"
        app:layout_constraintTop_toTopOf="@+id/btnFlexionLeftNeutralUpload"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/onLumbarFlexionNextClick"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="36dp"
        android:onClick="onLumbarFlexionNextClick"
        android:text="@string/next"
        app:backgroundTint="#0E0E0E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toEndOf="@+id/btnFlexionLeftUpload" />

    <Button
        android:id="@+id/btnFlexionLeftNeutralUpload"
        android:layout_width="116dp"
        android:layout_height="71dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="36dp"
        android:onClick="onBtnUploadClick"
        android:text="Left Neutral Position"
        app:backgroundTint="#090808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lumbarFlexionExplanation"
        android:layout_width="321dp"
        android:layout_height="186dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btnFlexionRightNeutralUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/flexionNeutralExample"
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/flexionExtensionExample"
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/flexionNeutralExample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flexionNeutralExample"
        app:layout_constraintTop_toTopOf="@+id/flexionNeutralExample"
        app:layout_constraintVertical_bias="1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/flexionNeutralExampleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neutral Position"
        app:layout_constraintEnd_toEndOf="@+id/flexionNeutralExample"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="@+id/flexionNeutralExample"
        app:layout_constraintTop_toBottomOf="@+id/flexionNeutralExample" />

    <TextView
        android:id="@+id/flexionExtensionExampleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extended Position"
        app:layout_constraintEnd_toEndOf="@+id/flexionExtensionExample"
        app:layout_constraintStart_toStartOf="@+id/flexionExtensionExample"
        app:layout_constraintTop_toBottomOf="@+id/flexionExtensionExample" />
</androidx.constraintlayout.widget.ConstraintLayout>