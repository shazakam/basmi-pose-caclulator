<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnTwoUploadTragus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".TragusActivity">

    <TextView
        android:id="@+id/tragusToWallTitle"
        android:layout_width="292dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:text="@string/tragus_to_wall_measurement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <ImageView
        android:id="@+id/elbowToIndexView"
        android:layout_width="142dp"
        android:layout_height="205dp"
        android:contentDescription="@string/elbow_to_index_example"
        android:rotation="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tragusToWallTitle"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/tragularPositionExampleview"
        android:layout_width="142dp"
        android:layout_height="205dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/tragus_to_wall_example"
        android:rotation="0"
        app:layout_constraintBottom_toBottomOf="@+id/elbowToIndexView"
        app:layout_constraintStart_toEndOf="@+id/elbowToIndexView"
        app:layout_constraintTop_toTopOf="@+id/elbowToIndexView"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tragularScore"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:text="@string/final_tragular_score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <TextView
        android:id="@+id/tragularScoreValue"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:editable="false"
        app:layout_constraintBottom_toBottomOf="@+id/tragularScore"
        app:layout_constraintStart_toEndOf="@+id/tragularScore"
        app:layout_constraintTop_toTopOf="@+id/tragularScore"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="292dp"
        android:text="Index to Elbow Length:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/indexToElbowInput"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:ems="9"
        android:hint="Enter Length"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnRetake"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:onClick="onRetakeClick"
        android:text="retake "
        app:backgroundTint="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="@+id/btnSubmitElbowIndex"
        app:layout_constraintStart_toEndOf="@+id/btnSubmitElbowIndex"
        app:layout_constraintTop_toTopOf="@+id/btnSubmitElbowIndex"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSubmitElbowIndex"
        android:layout_width="158dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="160dp"
        android:onClick="onSubmitClick"
        android:text="@string/submit_length"
        app:backgroundTint="#151414"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tragularScore"
        app:layout_constraintVertical_bias="0.432" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="317dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="@string/if_you_wish_to_change_your_index_to_elbow_length_click_on_the_length_below_input_your_desired_length_and_hit_submit_length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elbowToIndexView" />

    <Button
        android:id="@+id/btnRightUploadTragus"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="110dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="88dp"
        android:onClick="onClickTragusImageBtnOne"
        android:text="@string/upload_right_side"
        android:textColor="#F3F0F0"
        app:backgroundTint="#151515"
        app:iconTint="#E3E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startLumbarSide"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="110dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:onClick="onTragusNextClick"
        android:text="@string/next"
        android:textColor="#F4EFEF"
        app:backgroundTint="#151414"
        app:layout_constraintBottom_toBottomOf="@+id/btnLeftUploadTragus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/btnLeftUploadTragus"
        app:layout_constraintTop_toTopOf="@+id/btnLeftUploadTragus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnLeftUploadTragus"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="110dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickTragusImageBtnOne"
        android:text="@string/upload_left_side"
        android:textColor="#F8F3F3"
        app:backgroundTint="#131313"
        app:layout_constraintBottom_toBottomOf="@+id/btnRightUploadTragus"
        app:layout_constraintStart_toEndOf="@+id/btnRightUploadTragus"
        app:layout_constraintTop_toTopOf="@+id/btnRightUploadTragus" />

</androidx.constraintlayout.widget.ConstraintLayout>